<%  @iface.keys.sort.each do |k|
    v=iface[k]
    next unless v
    next if v.class == Array and v.empty?
    case k
    when :interface then k="DEVICE"
    when :auto then
    	 if v == True
       	    k="ONBOOT"
       	    v="yes"
	 end
    when :config
      	 k="BOOTPROTO"
      	 case v
      	 when "static","manual"
              v = "none"
      	 end
    when :ipaddress then k="IPADDR"
    when :netmask then k="NETMASK"
    when :broadcast then k="BROADCAST"
    when :router then k="GATEWAY"
    when :master then k="MASTER"
    when :slave
      if v == True
        k="SLAVE"
        v="yes"
      end
    when :bridge
      k="BRIDGE"
    when :vlan
      k="VLAN"
      v="yes"
    end
    next if k.class != String -%>
<%= "#{k}=#{v}" %>
<% end -%>
